<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tigerfarmpress.owlsms">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.tigerfarmpress.owlsms.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tigerfarmpress.owlsms.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.tigerfarmpress.owlsms.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tigerfarmpress.owlsms.MainActivity" />
        </activity>
        <activity
            android:name="com.tigerfarmpress.owlsms.LookupActivity"
            android:label="@string/title_activity_lookup"
            android:parentActivityName="com.tigerfarmpress.owlsms.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tigerfarmpress.owlsms.MainActivity" />
        </activity>
        <activity
            android:name="com.tigerfarmpress.owlsms.SendSmsActivity"
            android:label="@string/title_activity_sendsms"
            android:parentActivityName="com.tigerfarmpress.owlsms.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tigerfarmpress.owlsms.MainActivity" />
        </activity>
        <activity
            android:name="com.tigerfarmpress.owlsms.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.tigerfarmpress.owlsms.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tigerfarmpress.owlsms.MainActivity" />
        </activity>
    </application>

</manifest>